{
  "manifest_version": 3,
  "name": "ParallelTrans - 실시간 병행 번역기",
  "version": "2.0.0",
  "description": "영어-한국어 실시간 번역 (3가지 엔진 + Option+A 단축키)",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://api-free.deepl.com/*",
    "http://localhost:5000/*",
    "http://localhost:5001/*",
    "https://libretranslate.com/*",
    "https://*.libretranslate.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
