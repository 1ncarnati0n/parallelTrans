{
  "manifest_version": 3,
  "name": "ParallelTrans",
  "version": "4.0.0",
  "description": "Multi-engine parallel translator: DeepL (NMT), Groq (LLM)",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "activeTab", "scripting", "tabs"],

  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://api.groq.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
